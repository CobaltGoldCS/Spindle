<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WebScraper" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="android:textColor">#E2E2E2</item>
        <item name="colorPrimary">#87C0BD</item>
        <item name="colorPrimaryVariant">#4B8F8C</item>
        <item name="colorOnPrimary">#E2E2E2</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FB3640</item>
        <item name="colorSecondaryVariant">@color/dark_secondVar</item>
        <item name="colorOnSecondary">#E2E2E2</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/FadeTransition</item>
        <item name="backgroundColor">@color/background_dark</item>
    </style>

</resources>